---
const { title, description, img } = Astro.props;
const { class: className, ...rest } = Astro.props;
---

<div
  class=`px-12 py-8 border border-[#2C1250] border-t-[#693B93] border-t-4 rounded-t-xl rounded-b-xl w-full card-experience ${className}`
>
  <div class="flex gap-8 w-full">
    <div class="relative w-28 sombra-imagen">
      <img class="block w-full" src={img} alt="" />
      <span class="point-white point"></span>
      <span class="point-violet point"></span>
    </div>
    <div class="flex-1">
      <h3 class="font-medium text-4xl">{title}</h3>
      <p class="max-w-[270px] text-[10px]">
        {description}
      </p>

      <div class="mt-3">
        <button class="px-8 py-2.5 border border-[#693B93] rounded-xl text-xs">
          LEARN MORE
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  * {
    font-family: "Poppins", sans-serif;
  }

  .card-experience {
    background: rgb(19, 4, 40);
    background: linear-gradient(
      90deg,
      rgba(19, 4, 40, 1) 7%,
      rgba(37, 16, 67, 1) 34%,
      rgba(56, 18, 109, 1) 57%,
      rgba(38, 16, 69, 1) 85%,
      rgba(25, 6, 52, 1) 100%
    );
    box-shadow: 4px 7px 26px #000000;
  }

  .gradiente-bottom-right {
    background: #130428;
    background: linear-gradient(
      172deg,
      #130428 0%,
      #251043 32%,
      #261045 67%,
      #38126d 85%,
      #38126d 100%
    );
  }

  .sombra-imagen::before {
    position: absolute;
    content: "";
    width: 100%;
    height: 40px;
    bottom: 0;
    border-radius: 50%;
    background: #11071f;
    transform: rotate(-8deg);
    background: linear-gradient(0deg, #2c1250 0%, #2c1250 20%, #2c125000 90%);
  }

  .point::after,
  .point::before {
    position: absolute;
    content: "";
    width: 5px;
    height: 5px;
    border-radius: 50%;
  }

  .point-white.point::after {
    top: 70%;
    left: 0;
    background-color: #d9d9d9;
  }
  .point-white.point::before {
    top: 40%;
    right: -10%;
    background-color: #d9d9d9;
  }

  .point-violet.point::before {
    top: 15%;
    left: 15%;
    background-color: #693b93;
  }
  .point-violet.point::after {
    bottom: 5%;
    right: 15%;
    background-color: #693b93;
  }
</style>
