---
const { align, class: className, ...rest } = Astro.props;
---

<div class=`relative w-full content-image-project ${className}`>
    <div
        class:list={[
            "z-[2] relative bg-[#2B0B3A] pt-6 rounded-2xl w-full overflow-hidden",
            { "pr-8": align === "start" },
            { "pl-8": align !== "start" },
        ]}
    >
        <img
            class:list={[
                "block w-full max-w-full h-auto object-bottom-right object-cover overflow-hidden",
                { "rounded-tr-3xl": align === "start" },
                { "rounded-tl-3xl": align !== "start" },
            ]}
            src={align === "start" ? "screen-02.png" : "screen-01.png"}
            alt="ImÃ¡gen referencial"
        />
    </div>
</div>

<style>
    .content-image-project::before {
        position: absolute;
        content: "";
        border-radius: 50%;
        width: 50%;
        height: 100%;
        top: 0;
        left: 0;
        /* border: 1px solid #fff; */
        scale: 2;
        background: radial-gradient(
            circle closest-side,
            #763cac 0%,
            #320f8500 100%
        );
    }
    .content-image-project::after {
        position: absolute;
        content: "";
        border-radius: 50%;
        width: 50%;
        height: 100%;
        right: 0;
        top: 0;
        /* border: 1px solid #fff; */
        scale: 2;
        background: radial-gradient(
            circle closest-side,
            #763cac 0%,
            #320f8500 100%
        );
    }
</style>
